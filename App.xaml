<Application x:Class="HowrseBot.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:HowrseBot"
             xmlns:local1="clr-namespace:HowrseBot.ViewModel"
             Startup="Application_StartUp">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ListBoxStyle.xaml"/>
                <ResourceDictionary Source="Resources/Simple Styles.xaml"/>
                <ResourceDictionary Source="Resources/MainWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="play" UriSource="Resources/play.png"/>
            <BitmapImage x:Key="pause" UriSource="Resources/pause.png"/>
            <BitmapImage x:Key="delete" UriSource="Resources/delete.png"/>
            <BitmapImage x:Key="pencil" UriSource="Resources/pencil.png"/>
            <BitmapImage x:Key="bin" UriSource="Resources/bin2.png"/>

            <local1:MainViewModel x:Key="MainViewModel" />
        </ResourceDictionary>

    </Application.Resources>
</Application>
